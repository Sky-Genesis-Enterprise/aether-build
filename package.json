{
  "name": "aether-build",
  "private": true,
  "version": "0.1.0",
  "description": "A modern, fast build tool for the Aether ecosystem",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "aether": "dist/cli.js",
    "apm": "dist/cli.js"
  },
  "scripts": {
    "start": "node src/server.ts",
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "node --test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "build-tool",
    "bundler",
    "typescript",
    "aether",
    "dev-server",
    "esm"
  ],
  "author": "Aether Team",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.18.0",
    "@types/bun": "latest",
    "@types/node": "^22.14.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.5"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "esbuild": "^0.25.2",
    "fast-glob": "^3.3.3",
    "picocolors": "^1.1.1",
    "ws": "^8.18.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
